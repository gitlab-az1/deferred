{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": [
      "es5",
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strict": true,
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
